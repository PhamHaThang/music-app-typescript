extends ../../layouts/default.pug
block main
    h1 #{pageTitle}

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            .row 
                .col-8
                .col-4 
                    a.btn.btn-outline-success(href=`${prefixAdmin}/topics/create`) Thêm mới
    .card.mb-3 
        .card-header Danh sách chủ đề
        .card-body 
            table.table.table-hover.table-sm
                thead 
                    tr 
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Trạng thái
                        th Hành động
                tbody 
                    each item,index in topics
                        tr 
                            //- td #{pagination.skip + index+1}
                            td #{index+1}
                            td 
                                img(src= item.avatar, alt= item.title width="100px" height="auto")
                            td #{item.title}
                            td 
                                a(
                                    href="javascript:;" 
                                    button-change-status 
                                    data-status= item.status
                                    data-id= item.id
                                    class=`badge ${item.status == "active"?"badge-success": "badge-danger"}`
                                    ) #{item.status == "active"?"Hoạt động": "Không hoạt động"}
                            td
                                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/topics/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm mx-1" href=`${prefixAdmin}/topics/edit/${item.id}`) Sửa
                                button(
                                    class="btn btn-danger btn-sm"
                                    data-id=item.id
                                    button-delete
                                ) Xóa