extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
    .container.my-3
        .row 
            .col-12 
                +box-head(pageTitle)
        .row 
            each item in songs
                .col-6.mb-3 
                    .song-item 
                        .inner-image 
                            a(href=`/songs/detail/${item.slug}`) 
                                img(src=item.avatar)
                        .inner-content
                            .inner-title 
                                a(href=`/songs/detail/${item.slug}`) #{item.title} 
                            .inner-singer <i class="bi bi-mic-fill"></i> #{item.infoSinger.fullName}
                            .inner-like <i class="bi bi-hand-thumbs-up-fill"></i> #{item.like}
                            .inner-time <i class="bi bi-clock"></i> #{item.time}